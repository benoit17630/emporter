{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container stencil">
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1 class="text-center mt-4">inscription</h1>
<div class="text-center mt-4">
    {{ form_start(registrationForm) }}
       <div class="mt-2"> {{ form_row(registrationForm.email) }}</div>
    <div class="mt-2"> {{ form_row(registrationForm.firstname) }}</div>
    <div class="mt-2"> {{ form_row(registrationForm.lastname) }}</div>
    <div class="mt-2"> {{ form_row(registrationForm.phonenumber) }}</div>
       <div class="mt-2"> {{ form_row(registrationForm.plainPassword, {
            label: 'mot de passe : '
        }) }}</div>
    <div class="mt-2">    {{ form_row(registrationForm.agreeTerms) }}</div>

        <button type="submit" class="btn btn-primary  mt-4">s'inscrire</button>
    {{ form_end(registrationForm) }}
    </div>
    </div>
{% endblock %}
