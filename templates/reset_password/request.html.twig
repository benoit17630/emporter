{% extends 'base.html.twig' %}

{% block title %}modifier votre mot de passe{% endblock %}

{% block body %}
    <div class="container stencil">
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1 class="stencil text-center mt-4">mot de passe oublier </h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div class="my-4">
            <small>
                entrer votre adresse mail pour qu on vous envoye un lien pour changer votre mot de passe .
            </small>
        </div>

        <button class="btn btn-primary">envoyer</button>
    {{ form_end(requestForm) }}
    </div>
{% endblock %}