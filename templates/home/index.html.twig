{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="container text-center stencil ">
        <div class="row  py-5 " id="accueil">

            <div class="col-12 col-md-6 offset-md-3">
                <img src="{{ asset('assets/img/logo.jpg') }}" alt="" class="img-fluid">
            </div>
        </div>
        <div class="row justify-content-center fond1 py-5 stencil">
            <p class="col-12  text-center">Nous vous proposons une <strong>gamme variée de pizzas</strong> à partir
                <br />d'une <strong>pâte fraîche
                    maison</strong> et de produits de première <strong>qualité.</strong><br />
                <em>A découvrir aussi, nos salades de saison, desserts maison et boissons...</em></p>
        </div>

        {% for pizza in pizzas %}
            {% if  pizza.basepizza.name() == "pizza du mois" %}
                {% if pizza.isActive %}
                    <div class="intersection mb-5" ></div>
                    <section class="mt-4 mois">

                        <h2>pizza du mois</h2>

                        <article class="row justify-content-around text-center align-items-center">
                            <ul class=" col-12 col-lg-8 row text-left list-none">
                                <li class="col-lg-12 col-12 mt-3">
                                    <ul class="row text-left list-none">
                                        <li class="col-6">{{ pizza.name }} {% if  pizza.comment   %}
                                                <span class="arial">({{ pizza.comment }})</span>
                                            {% endif %} </li>
                                        <li class="col-4 col-md-2 offset-2 offset-md-4">{{ pizza.price|number_format(2) }} €</li>
                                        <li class="col-12 arial">
                                            {% for ingredients in pizza.ingredients %}
                                                {% if ingredients.category.name == "debut" %}
                                                    {{ ingredients.name }},
                                                {% endif %}
                                            {% endfor %}
                                            {% for ingredients in pizza.ingredients %}
                                                {% if  ingredients.category.name != "debut" and ingredients.category.name != "fin" %}
                                                    {{ ingredients.name }},
                                                {% endif %}
                                            {% endfor %}
                                            {% for ingredients in pizza.ingredients %}
                                                {% if ingredients.category.name  == "fin" %}
                                                    {{ ingredients.name }}
                                                {% endif %}
                                            {% endfor %}
                                        </li>
                                    </ul>
                                </li>
                            </ul>

                        </article>
                        <div id="basetomate" class="mb-5"></div>
                    </section>
                {%  endif %}
            {% endif %}
        {% endfor %}
        <div class="intersection mb-5" ></div>

        <section>
            <h2 class="text-center">Nos Pizzas Base Tomate</h2>
            <article class="row justify-content-around text-center">
                <div class="col-lg-2 d-none d-lg-block">
                    <img src="{{ asset('assets/img/pizza1.jpg') }}" alt="" class="img-fluid">
                </div>
                <ul class=" col-12 col-lg-8 row text-left list-none">

                    {% for pizza in pizzas %}
                        {% if  pizza.basepizza.name()  == "tomate"%}
                            {% if pizza.isActive %}
                                <li class="col-lg-6 col-12 mt-3">
                                    <ul class="row text-left list-none">
                                        <li class="col-6">{{ pizza.name }} {% if  pizza.comment   %}
                                                <span class="arial">({{ pizza.comment }})</span>
                                            {% endif %} </li>
                                        <li class="col-4 col-md-4 offset-2 offset-md-2">{{ pizza.price|number_format(2) }} €</li>
                                        <li class="col-12 arial">

                                            {% for ingredients in pizza.ingredients %}
                                                {% if ingredients.category.name == "debut" %}
                                                    {{ ingredients.name }},
                                                {% endif %}
                                            {% endfor %}
                                            {% for ingredients in pizza.ingredients %}
                                                {% if  ingredients.category.name != "debut" and ingredients.category.name != "fin" %}
                                                    {{ ingredients.name }},
                                                {% endif %}
                                            {% endfor %}
                                            {% for ingredients in pizza.ingredients %}
                                                {% if ingredients.category.name  == "fin" %}
                                                    {{ ingredients.name }}
                                                {% endif %}
                                            {% endfor %}

                                        </li>
                                    </ul>
                                </li>
                            {%  endif %}
                        {% endif %}
                    {% endfor %}

                </ul>
                <div class="col-lg-2 d-none d-lg-block">
                    <img src="{{ asset('assets/img/pizza1.jpg') }}" alt="" class="img-fluid">
                </div>
                <div class="mb-5" id="basecreme"></div>
            </article>

        </section>
        <div class="intersection mb-5 " ></div>
        <section class="basecreme stencil mt-5">
            <h2 class="creme ">Nos Pizzas Base Crème Fraiche</h2>

            <article class="row justify-content-around text-center align-items-center ">
                <div class="col-lg-2 d-none d-lg-flex">
                    <img src="{{ asset('assets/img/pizza2.jpg') }}" alt="" class="img-fluid">
                </div>

                <ul class="  col-12 col-lg-8 row text-left list-none ">
                    {% for pizza in pizzas %}
                        {% if  pizza.basepizza.name() == "créme fraîche" %}
                            {% if pizza.isActive %}
                                <li class="col-lg-6 col-12 mt-3">
                                    <ul class="row text-left list-none">
                                        <li class="col-6">{{ pizza.name }} {% if  pizza.comment   %}
                                                <span class="arial">({{ pizza.comment }})</span>
                                            {% endif %} </li>
                                        <li class="col-4 col-md-4 offset-2 offset-md-2">{{ pizza.price|number_format(2) }} €</li>
                                        <li class="col-12 arial">
                                            {% for ingredients in pizza.ingredients %}
                                                {% if ingredients.category.name == "debut" %}
                                                    {{ ingredients.name }},
                                                {% endif %}
                                            {% endfor %}
                                            {% for ingredients in pizza.ingredients %}
                                                {% if  ingredients.category.name != "debut" and ingredients.category.name != "fin" %}
                                                    {{ ingredients.name }},
                                                {% endif %}
                                            {% endfor %}
                                            {% for ingredients in pizza.ingredients %}
                                                {% if ingredients.category.name  == "fin" %}
                                                    {{ ingredients.name }}
                                                {% endif %}
                                            {% endfor %}
                                        </li>
                                    </ul>
                                </li>
                            {%  endif %}
                        {% endif %}
                    {% endfor %}
                </ul>
                <div class="col-lg-2 d-none d-lg-flex">
                    <img src="{{ asset('assets/img/pizza2.jpg') }}" alt="" class="img-fluid">
                </div>
            </article>

        </section>
        <div class="intersection mb-5" ></div>
        <section id="special" class="mt-4">

            <h2>Nos Pizzas Spéciales</h2>

            <article class="row justify-content-around text-center align-items-center">
                <ul class=" col-12 col-lg-8 row text-left list-none">
                    {% for pizza in pizzas %}

                        {% if  pizza.basepizza.name() == "spéciales" %}
                            {% if pizza.isActive %}

                                <li class="col-lg-6 col-12 mt-3">
                                    <ul class="row text-left list-none">
                                        <li class="col-6">{{ pizza.name }} {% if  pizza.comment   %}
                                                <span class="arial">({{ pizza.comment }})</span>
                                            {% endif %} </li>
                                        <li class="col-4 col-md-4 offset-2 offset-md-2">{{ pizza.price|number_format(2) }} €</li>
                                        <li class="col-12 arial">
                                            {% for ingredients in pizza.ingredients %}
                                                {% if ingredients.category.name == "debut" %}
                                                    {{ ingredients.name }},
                                                {% endif %}
                                            {% endfor %}
                                            {% for ingredients in pizza.ingredients %}
                                                {% if  ingredients.category.name != "debut" and ingredients.category.name != "fin" %}
                                                    {{ ingredients.name }},
                                                {% endif %}
                                            {% endfor %}
                                            {% for ingredients in pizza.ingredients %}
                                                {% if ingredients.category.name  == "fin" %}
                                                    {{ ingredients.name }}
                                                {% endif %}
                                            {% endfor %}
                                        </li>
                                    </ul>
                                </li>
                            {%  endif %}
                        {% endif %}
                    {% endfor %}
                </ul>
            </article>
            <div id="contacts"></div>
        </section>
        <div class="intersection mb-5" ></div>
        <section  class="contact">

            <h2>Horaires et Coordonnées</h2>

            <article class="container ">
                <ul class="row justify-content-center text-center align-items-center list-none">
                    <li class="col-lg-3 order-1 mb-3">Adresse
                        <ul class="row list-none">
                            {% for adress in adresss %}


                                <li class="col-12 arial">{{adress.adress|nl2br}}</li>
                                <li class="col-12">Téléphone</li>
                                <li class="col-12 arial">{{ adress.phoneNumber|nl2br }}</li>

                            {% endfor %}
                        </ul>
                    </li>
                    <li class="col-lg-3 order-3 mt-3">Ouvert toute l'année
                        <ul class="list-none">
                            <li>{% for horaire in horaires %}
                                    {% if horaire.isActive %}
                                        {{ horaire.name|nl2br }}
                                    {% endif %}

                                {% endfor %}
                            </li>
                            <li> fermé le
                                {% for day in days %}
                                    {% if day.isActive %}
                                        {{day.name}}
                                    {% endif %}

                                {% endfor %}
                            </li>
                            <li class="arial">(sauf pendant les vacances de pàques et d'été)</li>
                        </ul>
                    </li>
                    <li class="col-lg-6 order-2 ">
                        <img src="{{ asset('assets/img/vitrine2.jpg') }}" alt="" class="img-fluid">
                    </li>
                </ul>

            </article>
        </section>
        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d2763.880885167215!2d-1.3161059999999998!3d46
        .153118!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4803feef4298a7e3%3A0xabdaa64f77ef7e4e!2sA+L&#39;
        EMPORTER!5e0!3m2!1sfr!2sfr!4v1425252032617" style="border:0; width: 100%; height: 450px;"></iframe>
    </div>




{% endblock %}
